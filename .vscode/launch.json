  "version": "0.2.0",
  "configurations": [
      {
          "name": "(gdb) main",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/build/release/data-structures-practice.exe",
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": true,
          "MIMode": "gdb",
          "miDebuggerPath": "C:/MinGW/bin/gdb.exe",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
